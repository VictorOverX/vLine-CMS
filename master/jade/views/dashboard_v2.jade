          li
            a(href='#', data-set-lang="en") English
          li
            a(href='#', data-set-lang="es") Spanish
    // END Language list    

    | Dashboard
    small(data-localize="dashboard.WELCOME") 

  .row
    .col-lg-4
      // START List group
      ul.list-group
          li.list-group-item
            .row.row-table.pv-lg
              .col-xs-6
                p.m0.lead 1204
                p.m0: small Commits this month
              .col-xs-6.text-center
                div(data-sparkline="", data-bar-color="#23b7e5", data-height="60", data-bar-width="10", data-bar-spacing="6", data-chart-range-min="0", values="3,6,7,8,4,5")
          li.list-group-item 
            .row.row-table.pv-lg
              .col-xs-6
                p.m0.lead $ 3,200.00
