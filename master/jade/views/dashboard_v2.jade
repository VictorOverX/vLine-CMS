                  li: a(href="#", tooltip="Marsha"): img.img-responsive.img-circle.thumb24(src="img/user/04.jpg", alt="Follower")
                  li: a(href="#", tooltip="Robin"): img.img-responsive.img-circle.thumb24(src="img/user/09.jpg", alt="Follower")
      // END List group
    .col-lg-8
      // START bar chart
      #panelChart3.panel
        .panel-heading
          // START button group
          .pull-right.btn-group
            button(type="button", data-toggle="dropdown").dropdown-toggle.btn.btn-default.btn-sm
              | Monthly
            ul.dropdown-menu.fadeInLeft.animated(role='menu')
              li
                a(href='#') Daily
              li
                a(href='#') Monthly
              li
                a(href='#') Yearly
          // END button group
          .panel-title Projects Hours
        .panel-wrapper(collapse="panelChart3")
          .panel-body
            .indicator.show
              span.spinner
            .chart-bar-stackedv2.flot-chart
      // END bar chart

  .unwrap.mv-lg
    // START chart
    #panelChart9.panel(ng-controller="FlotChartController")
      .panel-heading
        // START button group
        .pull-right.btn-group
          button(type="button", data-toggle="dropdown").dropdown-toggle.btn.btn-default.btn-sm
            | All time
          ul.dropdown-menu.fadeInLeft.animated(role='menu')
            li
              a(href='#') Daily
            li
              a(href='#') Monthly
            li.divider
            li
              a(href='#') All time
        // END button group
        .panel-title Overall progress
      .panel-wrapper(collapse="panelChart9")
        .panel-body
          .chart-splinev2.flot-chart
        .panel-body
          .row
            .col-sm-3.col-xs-6.text-center
              p Projects
              .h1 25
            .col-sm-3.col-xs-6.text-center
              p Teammates
              .h1 85
            .col-sm-3.col-xs-6.text-center
              p Hours
              .h1 380
            .col-sm-3.col-xs-6.text-center
              p Budget
              .h1 $ 10,000.00
    // END chart

  // START radial charts
  .row.mb-lg
    .col-sm-3.col-xs-6.text-center
