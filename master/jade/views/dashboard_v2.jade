            .row.row-table.pv-lg
              .col-xs-6
                p.m0.lead 67
                p.m0: small New followers
              .col-xs-6
                ul.list-inline.text-center
                  li: a(href="#", tooltip="Katie"): img.img-responsive.img-circle.thumb24(src="img/user/02.jpg", alt="Follower")
                  li: a(href="#", tooltip="Cody"): img.img-responsive.img-circle.thumb24(src="img/user/01.jpg", alt="Follower")
