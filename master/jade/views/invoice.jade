              td.text-right $ 650
            tr
              td 3009
              td iMac ProRetina 17
              td 6
              td $ 1100
              td.text-right $ 6600

      .row
        .col-sm-offset-8.col-sm-4.pv
          .clearfix
            p.pull-left Subtotal
            p.pull-right.mr $ 10300
          .clearfix
            p.pull-left Tax (21%)
            p.pull-right.mr $ 2700
          .clearfix
            p.pull-left.h3 GRAND TOTAL
            p.pull-right.mr.h3 $ 13000

      hr.hidden-print
      .clearfix
        button(type="button").btn.btn-info.pull-left.mr Edit
        button(type="button", onclick="window.print();").btn.btn-default.pull-left Print
        button(type="button").btn.btn-success.pull-right Send Invoice